@model IEnumerable<Okul.Data.Models.Ogretmenler>

@{
    ViewBag.Title = "Öğretmenler Listesi";
}

<h2>Öğretmen Listesi</h2>

<p>
    @Html.ActionLink("Yeni Öğretmen Ekle", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Adı ve Soyadı</th>
            <th>Eposta</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ogretmenler in Model)
        {
            <tr>
                <td>@ogretmenler.AdSoyad</td>
                <td>@ogretmenler.Eposta</td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = ogretmenler.OgretmenId }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Sil", "Delete", new { id = ogretmenler.OgretmenId }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
