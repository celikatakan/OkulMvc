@model IEnumerable<Okul.Data.Models.Dersler>

@{
    ViewBag.Title = "Ders Listesi";
}

<h2>Ders Listesi</h2>

<p>
    @Html.ActionLink("Yeni Ders Ekle", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Ders Adı</th>
            <th>Öğretmen</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ders in Model)
        {
            <tr>
                <td>@ders.DersAdi</td>
                <td>@ders.Ogretmen?.AdSoyad</td>  
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = ders.DersId }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Sil", "Delete", new { id = ders.DersId }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
