@model IEnumerable<Okul.Data.Models.Ogrenciler>

@{
    ViewBag.Title = "Öğrenci Listesi";
}

<h2>Öğrenci Listesi</h2>

<p>
    @Html.ActionLink("Yeni Öğrenci Ekle", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Ad Soyad</th>
            <th>Eposta</th>
            <th>Bölüm</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ogrenci in Model)
        {
            <tr>
                <td>@ogrenci.AdSoyad</td>
                <td>@ogrenci.Eposta</td>
                <td>@ogrenci.Bolum?.BolumAdi</td>  <!-- null kontrolü önemli -->
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = ogrenci.OgrenciId }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Sil", "Delete", new { id = ogrenci.OgrenciId }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
