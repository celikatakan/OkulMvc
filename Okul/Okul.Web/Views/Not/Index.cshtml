@model IEnumerable<Okul.Data.Models.Notlar>

@{
    ViewBag.Title = "Not Listesi";
}

<h2>Not Listesi</h2>

<p>
    @Html.ActionLink("Yeni Notlar Ekle", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Öğrenci</th>
            <th>Ders</th>
            <th>1. Sınav</th>
            <th>2. Sınav</th>
            <th>Final Notu</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var notlar in Model)
        {
            <tr>
                <td>@notlar.Ogrenci?.AdSoyad</td>
                <td>@notlar.Ders?.DersAdi</td>
                <td>@notlar.Sinav1</td>
                <td>@notlar.Sinav2</td>
                <td>@notlar.FinalNotu</td>
                <td>
                    @Html.ActionLink("Düzenle", "Edit", new { id = notlar.NotId }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Sil", "Delete", new { id = notlar.NotId }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
