@model IEnumerable<Okul.Data.Models.Bolumler>

@{
    ViewBag.Title = "Bölüm Listesi";
}

<h2>Bölüm Listesi</h2>

<p>
    @Html.ActionLink("Yeni Bölüm Ekle", "Create", null, new { @class = "btn btn-primary" })
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Bölüm Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bolumler in Model)
        {
            <tr>
                <td>@bolumler.BolumAdi</td>
                <td>     
                    @Html.ActionLink("Düzenle", "Edit", new { id = bolumler.BolumId }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Sil", "Delete", new { id = bolumler.BolumId }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
